{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "paths": {
      "app": [ "./src/app" ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ],
  "include": [
    "./src/**/*"
  ]
}
